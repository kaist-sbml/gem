#!/bin/bash

if [ $# -ne 1 ]
then
        echo
        echo 'usage: eficaz2.5 [file]'
        echo
        echo 'The file should be a normal fasta file containing a single sequence '
        echo
exit 1
fi

target=$1

#EFICAz25_PATH=/data1/root_files/EFICAz_v2.5/EFICAz2.5/bin/eficaz2.5   # change this path to the EFICAz2.5 directory
export EFICAz25_PATH="/data1/root_files/EFICAz_v2.5/EFICAz2.5"   # change this path to the EFICAz2.5 directory

export PATH="${PATH}:${EFICAz25_PATH}"

python $EFICAz25_PATH/bin/EFICAz_latest.py $target

exit 0

